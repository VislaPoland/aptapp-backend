# EMBEDDED SERVER CONFIGURATION
server.port=8080
server.contextPath=/

# JPA
spring.jpa.properties.hibernate.globally_quoted_identifiers=true
spring.jpa.properties.hibernate.id.new_generator_mappings=true
spring.jpa.hibernate.ddl-auto=update
spring.jpa.hibernate.naming-strategy=org.springframework.boot.orm.jpa.hibernate.SpringNamingStrategy
spring.jpa.show-sql=true

# DataSource
spring.datasource.url=jdbc:postgresql://localhost:5432/aptapp
spring.datasource.username=postgres
spring.datasource.password=
spring.datasource.driver-class-name=org.postgresql.Driver

# JWT
jwt.token.header=Authorization
jwt.token.secret=3sw756ywmct5x2sa4c5rgt6asezugr2455eus8o4795yw5
jwt.token.expiration=604800

# JACKSON
spring.jackson.serialization.INDENT_OUTPUT=true

# Logging
logging.level.org.springframework.web=DEBUG
logging.level.org.hibernate=ERROR
logging.level.io.swagger.models.parameters.AbstractSerializableParameter=ERROR


# Mail
mail.from=noreply@thinkcreatix.com
spring.mail.host=smtp.sendgrid.net
spring.mail.port=465
spring.mail.username=aptapp
spring.mail.password=
spring.mail.properties.mail.smtp.ssl.enable=true

# Serve HTML as view
spring.mvc.view.suffix=.html

# Enable multipart
multipart.enabled=true
multipart.max-file-size=40MB
multipart.max-request-size=400MB

